---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
import { ClientRouter } from 'astro:transitions';
import { Image } from 'astro:assets';
import Comments from '../components/Comments.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'] & {
	headings: { depth: number; slug: string; text: string }[];
};

const { title, description, pubDate, updatedDate, heroImage, headings,author, authorImage } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<ClientRouter />
		<BaseHead title={title || SITE_TITLE} description={description || ''} image={heroImage} />
		<style>
			main {
				width: 100%;
				max-width: 100%;
				padding: 0;
				margin: 0;
			}
			.blog-container {
				display: flex;
				align-items: flex-start;
			}
			
			.sidebar {
				width: 300px;
				margin-right: 2rem;
				display: flex;
				flex-direction: column;
				gap: 2rem;
				padding: 2rem;
				position: sticky;
				top: 2rem;
				height: fit-content;
			}
			.back-link {
				display: inline-block;
				background-color: var(--color-orange);
				color: black;
				text-decoration: none;
				padding: 0.2rem 0.5rem;
				border: 2px solid black;
				font-family: monospace;
				font-weight: bold;
				width: fit-content;
				box-shadow: 4px 4px 0 0 var(--box-shadow);
				transform: translate(1px, 1px);
			}
			.back-link:active {
				transform: translate(2px, 2px);
			}
			.sidebar-title {
				font-size: 2.5rem;
				color: var(--heading-color);
				line-height: 1.1;
				font-family: 'Space Mono', monospace;
				margin: 0;
			}
			.author-block {
				display: flex;
				align-items: center;
				gap: 1rem;
				color: var(--heading-color)
			}
			.author-avatar {
				width: 50px;
				height: 50px;
				background-color: white;
				box-shadow: 4px 4px 0 0 var(--box-shadow);
				overflow: hidden;
				border-radius: 0;
				display: inline-block;
			}

			.author-avatar img,
			.author-avatar picture img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				display: block;
				border-radius: 0;
			}
			.description {
				font-size: 0.9rem;
				line-height: 1.4;
				
			}
			.toc-title {
				font-weight: bold;
				margin-bottom: 0.5rem;
				display: block;
			}
			.toc-list {
				list-style: none;
				padding: 0;
				margin: 0;
				font-size: 0.9rem;
			}
			.toc-list li {
				margin-bottom: 0.5rem;
			}
			.toc-list a {
				text-decoration: none;
				color: var(--text-color);
			}
			.toc-list a:hover {
				color: var(--accent);
			}
			.main-column{
				flex: 1;
				display: flex;
				flex-direction: column;
			}
			.content-area {
				flex: 1;
				border-left: 4px solid var(--header-border);
				padding: 2rem;
			}
			.comment-section {
				display: block;
				border-top: 4px solid var(--header-border);
				border-left: 4px solid var(--header-border);
			}
			.hero-image {
				width: 100%;
				border: 2px solid black;
				margin-bottom: 2rem;
				display: block;
				height: auto;
			}

			.content {
				padding: 0 2rem;
			}

			@media (max-width: 820px) {
				.blog-container {
					flex-direction: column;
				}
				.sidebar {
					width: 100%;
					position: static;
					margin-bottom: 2rem;
					border-bottom: 1px solid var(--gray);
					padding-bottom: 2rem;
				}
				.content-area {
					border-left: none;
					border-top: 4px solid var(--header-border);
					padding: 1rem;
				}
				.comment-section {
					border-left: none;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<div class="blog-container">
				<aside class="sidebar">
					<a href="/" class="back-link">cd ..</a>
					
					<h1 class="sidebar-title">{title}</h1>
					<FormattedDate date={pubDate} />
					<span>{updatedDate ? <span>Updated:</span> <FormattedDate date={updatedDate} /> : ''}</span>
					<div class="author-block">
						{authorImage ? (
							typeof authorImage === 'string' ? (
								<span class="author-avatar">
									<img src={authorImage} alt={author || 'Author'} />
								</span>
							) : (
								<Image src={authorImage} alt={author || 'Author'} class="author-avatar" />
							)
						) : (
							<div class="author-avatar" title={author}></div>
						)}
						<span>By {author}</span>
					</div>

					<div class="description">
						{description}
					</div>

					{headings && headings.length > 0 && (
						<nav class="toc">
							<span class="toc-title">TOC:</span>
							<ul class="toc-list">
								{headings.map((heading) => (
									(heading.depth <= 3) && (
									<li style={`padding-left: ${(heading.depth - 2) * 1}rem`}>
										<a href={`#${heading.slug}`}>â€¢ {heading.text}</a>
									</li>
									)
								))}
							</ul>
						</nav>
					)}
				</aside>
				<div class="main-column">
					<article class="content-area" transition:animate="slide">
						{heroImage && <Image src={heroImage} alt="" class="hero-image" />}
						<div class="content">
							<slot />
						</div>
					</article>
					<section class="comment-section">
						<Comments />
					</section>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>